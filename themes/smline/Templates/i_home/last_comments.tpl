<div class="box margin-top-5">	<div class="box_title">Comentarios recientes</div>	<div class="box_body list_element">		{if $last_comments}		{foreach from=$last_comments item=p}		<div class="list-element">			<a href="{$web.url}/{$p.u_nick}" class="subinfo">{$p.u_nick}</a>			<a href="{$web.url}/posts/{$p.c_seo}/{$p.p_id}/{$p.p_title|seo}.html">{$p.p_title}</a>		</div>		{/foreach}		{else}		<div class="emptyData">No hay comentarios en {$web.title}</div>		{/if}	</div></div>