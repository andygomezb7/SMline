<div class="box margin-top-5">	<div class="box_title">Top posts</div>		<div class="box_filter filter_posts clearfix">		<a onclick="tops_filter('posts', 1, 'ho')" class="f_p_ho">Hoy</a>		<a onclick="tops_filter('posts', 2, 'ay')" class="f_p_ay">Ayer</a>		<a onclick="tops_filter('posts', 3, 'se')" class="f_p_se">Semana</a>		<a onclick="tops_filter('posts', 4, 'me')" class="f_p_me">Mes</a>		<a onclick="tops_filter('posts', 5, 'hi')" class="f_p_hi active">Histórico</a>	</div>		<div class="box_body list_element top_posts">		{if !$top_posts}<div class="emptyData">No hay posts en este rango de tiempo</div>{/if}		{foreach from=$top_posts item=p key=i}		<div class="list-element">			<span class="number-list">{$i+1}</span>			<a href="{$web.url}/posts/{$p.c_seo}/{$p.p_id}/{$p.p_title|seo}.html" title="{$p.p_title}">{$p.p_title|substr:0:28}</a>			<span class="value">{$p.p_puntos}</span>		</div>		{/foreach}		<div class="box_more">			<a href="{$web.url}/tops">Ver más</a>		</div>	</div></div>