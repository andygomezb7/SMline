{if $topic.t_status == 0 && ($user->permits['goadmin'] || $me.m_rank == 1 || $me.m_rank == 2)}<div class="item-info error" style="margin-bottom:5px">Este tema se encuentra actualmente <b>eliminado</b>. Tus privilegios de rango te permiten visualizar temas eliminados.</div>{/if}<div class="post_title">{$topic.t_title}</div>	<div class="post-head-info clearfix">		<span class="post_date"><a class="stip" title="{$topic.t_date|date_format:"%d/%m/%Y %I:%M %p"}">{$topic.t_date|hace}</a></span>		<div class="actions_follow_and_fav">			<div id="follows-buttons" data-type="topics" type-id="{$topic.t_id}" style="display:inline-block;">				<a class="button_1 to_follow require-login" style="{if $user->is_following('topic', $topic.t_id)}display:none;{/if}"><img src="{$web.icons}/follow.png"/>Seguir tema</a>				<a class="button_3 ok_follow" style="{if !$user->is_following('topic', $topic.t_id)}display:none;{/if}">Siguiendo</a>				<a class="b_cancel un_follow" style="display:none;">Dejar de seguir</a>			</div>						{if $topic.t_user != $user->uid && !$user->permits['goadmin'] && !$user->permits['gomod']}			<a class="button_1 type_5 stip require-login" onclick="user.new_report('tema', '{$topic.t_title}', '{$topic.u_nick}', {$topic.t_id});" title="Reportar tema"><img src="{$web.icons}/flag.png" /></a>			{/if}						{if $topic.t_user != $user->uid}			<a class="button_1 post_add_fav require-login" onclick="{if $user->uid}topic.fav(0);return false;{/if}" href="#" style="{if $topic.t_is_fav}display:none;{/if}"><img src="{$web.icons}/heart_10.png"/>Agregar a favoritos</a>			<a class="button_1 post_remove_fav" onclick="topic.fav(1);" style="{if !$topic.t_is_fav}display:none;{/if}"><img src="{$web.icons}/heart_10.png"/>Borrar de favoritos</a>			{/if}						{if ($topic.u_id == $user->uid && ($user->permits['btp'] || $user->permits['etp'])) || $user->permits['bt'] || $user->permits['et'] || $user->permits['dt'] || $user->permits['ft'] || $me.m_rank == 1 || $me.m_rank == 2}			<a class="button_1 post_options" onclick="$('.list_options').toggle(400);">Opciones</a>			<ul class="list_options">				{if $topic.t_status == 0 && ($topic.u_id != $user->uid || $user->permits['goadmin'] || $me.m_rank == 1 || $me.m_rank == 2)}					<li><a onclick="mod.reac('topics', {$topic.t_id});"><img src="{$web.icons}/sok.png"/> Reactivar tema</a></li>				{elseif $topic.u_id == $user->uid && $user->permits['btp'] && $topic.t_status != 0}					<li><a onclick="topic.del({$topic.t_id});"><img src="{$web.icons}/delete.png"/> Borrar tema</a></li>				{elseif ($user->permits['bt'] || $me.m_rank == 1 || $me.m_rank == 2) && $topic.t_status != 0}					<li><a onclick="mod.del('topics', {$topic.t_id});"><img src="{$web.icons}/delete.png"/> Borrar tema</a></li>				{/if}				{if ($topic.u_id == $user->uid && $user->permits['etp']) || $user->permits['et'] || $me.m_rank == 1 || $me.m_rank == 2}					<li><a href="{$web.url}/comunidades/{$topic.comu_seo}/editar-tema?tid={$topic.t_id}"><img src="{$web.icons}/edit.png"/> Editar tema</a></li>				{/if}				{if ($user->permits['ft'] || $me.m_rank == 1 || $me.m_rank == 2) && $topic.t_sticky == 0}					<li><a onclick="mod.add_sticky('topics', {$topic.t_id});"><img src="{$web.icons}/sticky.png"/> Fijar tema</a></li>				{/if}				{if ($user->permits['dt'] || $me.m_rank == 1 || $me.m_rank == 2) && $topic.t_sticky == 1}					<li><a onclick="mod.remove_sticky('topics', {$topic.t_id});"><img src="{$web.icons}/sticky.png"/> Desfijar tema</a></li>				{/if}			</ul>			{/if}					</div>	</div>		{if $topic.history}	<div class="post-mod-history">		<center><h3>Historial de moderación del tema			<a onclick="$('.post-mod-history table').toggle();" class="floatR" title="Ocultar/Mostrar"><i class="icon expand"></i></a>		</h3></center>		<table cellpadding="0" cellspacing="0" border="0" class="admin_table" width="718" align="center">            <thead>				<tr>					<th>Moderador</th>					<th>Acción</th>					<th>Razón</th>					<th>Fecha</th>				</tr>			</thead>			<tbody>				{foreach from=$topic.history item=h}				<tr>					<td><a href="{$web.url}/{$h.u_nick}"><b>{$h.u_nick}</b></a></td>					<td>						{if $h.h_action == 1}<span class="color-red">borró el tema</span> 						{elseif $h.h_action == 2}<span class="color-green">reactivó el tema</span>						{elseif $h.h_action == 3}<span class="color-gray">editó el tema</span>						{elseif $h.h_action == 6}<span class="color-blue">fijó el tema</span>						{elseif $h.h_action == 7}<span class="color-deeppink">desfijó el tema</span>						{/if}					</td>					<td>{$h.h_reason}</td>					<td>{$h.h_date|hace}</td>				</tr>				{/foreach}			</tbody>		</table>	</div>	{/if}	<div class="box_body post_content margin-top-5 clearfix">				{$topic.t_body}		<hr class="hr-dashed"/>								<span class="share-title">Recomienda este tema a tus amigos.</span>		<script type="text/javascript">var switchTo5x=true;</script>		<script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>		<script type="text/javascript">{literal}stLight.options({publisher: "f9eaeb68-1fbe-46ad-9970-5ad61d3aa753", doNotHash: false, doNotCopy: false, hashAddressBar: false});{/literal}</script>		<div class="post-share-bottom">			<span class="st_email_hcount" displayText="Email"></span>			<span class="st_linkedin_hcount" displayText="LinkedIn"></span>			<span class="st_googleplus_hcount" displayText="Google +"></span>			<span class="st_twitter_hcount" displayText="Tweet"></span>			<span class="st_facebook_hcount" displayText="Facebook"></span>			<span class="number-share-t unrated">				<a onclick="{if $user->uid}topic.share();return false;{/if}" href="#" class="share-t require-login"></a>				<span class="count-shareds">					<span class="shar-pico"></span>					<span class="total-share">{$topic.t_shared}</span>				</span>			</span>		</div>				{*if $user->permits['vpt'] || $user->permits['vnt'] || !$user->uid*}		<div class="dar-voto floatR">			<span class="item-info ok margin-top-5" style="display:none"><img src="{$web.icons}/ok.png"> Voto agregado!</span>			<center>				<span class="share-title center">Califica esta tema.</span>			<a class="likes_buttons ilike stip require-login vote-type-1" onclick="{if $user->uid}topic.vote(1, $(this));return false;{/if}" href="#" title="Me gusta">				<span class="ilike_back"></span>				<span class="ilike_text">{$topic.t_positives}</span>			</a>			<a class="likes_buttons idislike stip require-login vote-type-0" onclick="{if $user->uid}topic.vote(0, $(this));return false;{/if}" href="#" title="No me gusta">				<span class="ilike_back"></span>				<span class="ilike_text">{$topic.t_negatives}</span>			</a>			</center>		</div>			</div>		<div class="post-head-info pbottom margin-top-10 clearfix">		<ul class="post-metadata">			<li class="floatL">				<i class="icon heart"></i><b id="post-total-favs">{$topic.t_favs}</b> Favoritos			</li>			<li class="floatL">				<i class="icon comments"></i><b id="post-total-comment">{$topic.t_comments}</b> Respuestas			</li>			<li class="floatL">				<i class="icon eye"></i><b>{$topic.t_followers}</b> Seguidores			</li>			<li class="floatL">				<i class="icon hits"></i><b>{$topic.t_hits}</b> Visitas			</li>		</ul>	</div>